<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_400"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="LogOut"
                android:textColor="#171" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="90sp"
        android:background="@color/gray_400"
        tools:context=".activitys.MapsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/RelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:background="@drawable/background_orange"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="110sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="60sp"
                        android:layout_marginBottom="50sp"
                        android:padding="25sp"
                        android:text="Invite Your "
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="110sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="-10sp"
                        android:layout_marginBottom="5sp"
                        android:padding="25sp"
                        android:text="Home Member"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="33sp"
                        android:layout_marginRight="200sp"
                        android:layout_marginBottom="26sp"
                        android:src="@drawable/ic_baseline_add_circle_24"></ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/background_green">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="110sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="60sp"
                        android:layout_marginBottom="50sp"
                        android:padding="25sp"
                        android:text="Medication"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="110sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="-10sp"
                        android:layout_marginBottom="5sp"
                        android:padding="25sp"
                        android:text="Reminders"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="33sp"
                        android:layout_marginRight="200sp"
                        android:layout_marginBottom="26sp"
                        android:src="@drawable/ic_baseline_access_alarms_24" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReminders"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:cornerRadius="20sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/background_yellow">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="110sp"
                        android:layout_marginTop="30sp"
                        android:layout_marginEnd="80sp"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:text="Help"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="33sp"
                        android:layout_marginRight="200sp"
                        android:layout_marginBottom="26sp"
                        android:src="@drawable/ic_baseline_help_24" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnHelp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:cornerRadius="20sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RelativeLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/background_pink">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="110sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="60sp"
                        android:layout_marginBottom="50sp"
                        android:padding="25sp"
                        android:text="Profile      "
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="110sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="5sp"
                        android:padding="25sp"
                        android:text="Edit        "
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="33sp"
                        android:layout_marginRight="200sp"
                        android:layout_marginBottom="26sp"
                        android:src="@drawable/ic_round_create_24" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAccount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:cornerRadius="20sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>